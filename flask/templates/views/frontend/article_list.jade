extends layouts/base.jade

- from 'mixins.jade' import formfield, formsubmit

block main_content

	form.article-search
		input.big-search-input(placeholder="Search by Name")
	h1 Texts

	table.table
		thead
			tr
				th Title
				th Comprehension
				th Total
				th Known
				th Learning
				th 
					//- Action
		tbody
			for doc, stats in doc_pairs
				td= doc.title
				td
					+vocab_progress_bar(stats)
				td.align-center= doc.words|length
				td.align-center= "%2.0f%%"|format(stats.percents.known)
				td.align-center= "%2.0f%%"|format(stats.percents.learning)
				td
					a(href=url_for('frontend.article_read', doc_id=doc.id)) read
					|  | 
					a(href=doc.source, target="_blank") original
		