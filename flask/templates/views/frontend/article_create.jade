extends layouts/base.jade

- from 'mixins.jade' import formfield, formsubmit
- var a_test = "THIS IS A TRANSLATION TEST"

block main_content
	h1= _("Add a Text")

	form(method="post").pure-form
		!= form.csrf_token
		+formfield(form.url)
		+formfield(form.plaintext)
		+formfield(form.title)
		+formsubmit