{
	"manifest_version": 2,

	"name": "superglot",
	"description": "Collect all the words!",
	"version": "0.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": [
			"lib/jquery.js",
			"lib/async.js",
			"lib/lodash.min.js",
			"common.js",
			"background.js"
		]
	},

	"content_scripts": [{
		"matches": [
			"https://*/*",
			"http://*/*",
			"file://*/*"
		],
		"css": ["main.css"],
		"js": [
			"lib/lodash.min.js",
			"lib/jquery.js",
			"common.js",
			"main.js"
		]
	}],

	"icons": {
		"16": "icon.png"
	},

	"permissions": [
		"storage",
		"tabs",
		"cookies",
		"contextMenus",
		"http://localhost:3000/",
		"http://superglot.com/"
 	],

 	"web_accessible_resources": [
		"lib/jquery.js",
		"lib/lodash.min.js",
		"lib/async.js",
		"images/cursor-known.png",
		"images/cursor-learning.png",
		"images/cursor-remove.png"
 	]
}