script(src="lib/jquery.min.js")
script(src="common.js")
script(src="popup.js")

style.
	body {
		width: 300px;
		font-size: 18px;
		font-family: 'Helvetica Neue', sans-serif;
	}

	.learning {
		color: #a30;
	}

	.known {
		color: #0a3;
	}

	.table {

	}

	.case {
		display: none;
	}

.case.logged-out

	h1 log in

	form(method="post", action="http://localhost:3000/login")
		label username:
		input(type="text", name="username")
		label password:
		input(type="text", name="password")
		input(type="submit", value="login")

.case.logged-in

	h1 page stats

	h2.known
		span.percent-known
		| % known

	h2.learning
		span.percent-learning
		| % learning

	table.table
		tr
			td total words:
			td.total-all
		tr
			td unique words:
			td.total-unique
		tr
			td known:
			td.total-known
		tr
			td learning:
			td.total-learning
		tr
			td ignored:
			td.total-ignored

.case.error
	h1 error!