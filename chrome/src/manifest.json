{
	"manifest_version": 2,

	"name": "superglot",
	"description": "Collect all the words!",
	"version": "0.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": [
			"lib/zepto.min.js", 
			"lib/async.js", 
			"lib/underscore.js", 
			"common.js", 
			"background.js"
		]
	},

	"content_scripts": [{
		"matches": [
			// "https://*/*",
			// "http://*/*", 
			"file://*/*"
		],
		"css": ["main.css"],
		"js": [
			"lib/zepto.min.js", 
			"lib/underscore.js", 
			"common.js", 
			"corncob.js", 
			"main.js"
		]
	}],

	"icons": {
		"16": "icon.png"
	},

	"permissions": [
		"tabs",
		"contextMenus",
		"http://localhost:3000/"
 	],

 	"web_accessible_resources": [
		"lib/underscore.js",
		"lib/zepto.min.js", 
		"lib/async.js"
 	]
}